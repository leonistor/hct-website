---
import PageHero from "@/components/ui/typography/PageHero.astro"
import BaseLayout from "@/layouts/BaseLayout.astro"
import IconMail from "phosphor-astro/Envelope.astro"
import IconPin from "phosphor-astro/MapPin.astro"
import IconPhone from "phosphor-astro/Phone.astro"
import IconBriefcase from "phosphor-astro/Briefcase.astro"
import { Button } from "@/components/starwind/button"
---

<BaseLayout>
  <PageHero title="Contact" />
  <div class="mb-4 border-4 border-gray-200 sm:mb-0 md:mx-2">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22312.272413765848!2d25.618056333186377!3d45.65013792101316!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b35c68685b14b9%3A0x21e2e9f73d56529e!2sStrada%20Zizinului%20111%2C%20Bra%C8%99ov%20500407!5e0!3m2!1sen!2sro!4v1764656768291!5m2!1sen!2sro"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  <div class="flex items-center justify-center">
    <div class="text-center">
      <div class="mx-auto grid max-w-(--breakpoint-xl) gap-16 sm:px-6 sm:py-24 lg:grid-cols-3">
        <div class="flex flex-col items-center text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-full">
            <IconMail />
          </div>
          <h3 class="mt-6 text-xl font-semibold">Email</h3>
          <p class="mt-2">info@h-ct.ro</p>
        </div>
        <div class="flex flex-col items-center text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-full">
            <IconPin />
          </div>
          <h3 class="mt-6 text-xl font-semibold">Office</h3>
          <p class="mt-2">Str. Zizinului 111, etaj 2, camera 28-29<br />500407 Braşov, România</p>
        </div>
        <div class="flex flex-col items-center text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-full">
            <IconPhone />
          </div>
          <h3 class="mt-6 text-xl font-semibold">Tel</h3>
          <p class="mt-2">Mobil/Whatsapp<br />+40-743-100.883</p>
        </div>
        <div class="flex flex-col items-center text-center sm:col-span-3">
          <div class="flex h-12 w-12 items-center justify-center rounded-full">
            <IconBriefcase />
          </div>
          <h3 class="mt-6 text-xl font-semibold">S.C. Hategan Consulting & Trading S.R.L.</h3>
          <p class="mt-2">RO37527965<br />J2017001102086<br />IBAN RON: RO91 RZBR 0000 0600 2262 8467</p>
        </div>
      </div>
    </div>
  </div>
  <!-- contact form -->
  <div class="mx-auto mt-8 flex w-full items-center justify-center sm:mt-0 sm:w-2/3">
    <form action="/actions/send-email" method="post" class="min-w-full space-y-4">
      <div>
        <input
          type="text"
          name="contact"
          required
          min="3"
          class="w-full border border-gray-300 p-2.5 placeholder-gray-500"
          placeholder="Telefon sau e-mail"
          required
        />
      </div>
      <div class="sm:col-span-2">
        <textarea
          name="mesaj"
          required
          minlength="3"
          rows="6"
          class="block w-full border border-gray-300 p-2.5 placeholder-gray-500"
          placeholder="Mesajul Dumneavoastră"></textarea>
      </div>
      <Button type="submit" variant="outline" class="rounded-none">Trimite</Button>
    </form>
  </div>
</BaseLayout>
