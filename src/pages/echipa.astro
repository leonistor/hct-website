import { Button } from "@/components/starwind/button"

import { Image } from "astro:assets"
import PageHero from "@/components/ui/typography/PageHero.astro"
import Foto from "src/assets/illustratii/placeholder_echipa.jpg"

const teamMembers = [
  {
    name: "Sebastian Hațegan",
    title: "Manager",
    bio: "<bio>",
    imageUrl: "https://images.pexels.com/photos/3785079/pexels-photo-3785079.jpeg?auto=compress&cs=tinysrgb&w=600",
  },
  {
    name: "Andreea ???",
    title: "<titlu>",
    bio: "<bio>",
    imageUrl: "https://images.pexels.com/photos/415829/pexels-photo-415829.jpeg?auto=compress&cs=tinysrgb&w=600",
  },
  {
    name: "Alin ???",
    title: "<titlu>",
    bio: "<bio>",
    imageUrl: "https://images.pexels.com/photos/91227/pexels-photo-91227.jpeg?auto=compress&cs=tinysrgb&w=600",
  },
  {
    name: "Alex ???",
    title: "<titlu>",
    bio: "<bio>",
    imageUrl: "https://images.pexels.com/photos/2379005/pexels-photo-2379005.jpeg?auto=compress&cs=tinysrgb&w=600",
  },
]
---

<BaseLayout>
  <PageHero title="Echipa">
    <p class="max-w-5xl">O echipă de oameni pasionați de a face cea mai bună muncă pentru cele mai bune rezultate.</p>
  </PageHero>
  <div class="mx-auto flex max-w-(--breakpoint-xl) flex-col justify-center gap-16 px-6 lg:px-8">
    <div class="grid w-full grid-cols-1 gap-x-10 gap-y-12 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      {
        teamMembers.map((member) => (
          <div class="bg-accent flex flex-col items-center rounded-lg px-6 py-8 text-center">
            <Image
              src={Foto}
              alt={member.name}
              class="bg-accent h-16 w-16 shrink-0 rounded-full object-cover sm:h-20 sm:w-20"
              width={120}
              height={120}
            />
            <h3 class="mt-5 text-lg font-semibold">{member.name}</h3>
            <p class="text-muted-foreground text-sm">{member.title}</p>
            <p class="mt-2 mb-6 text-pretty">{member.bio}</p>
            {/* <div class="mt-auto flex items-center gap-4">icons</div> */}
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
