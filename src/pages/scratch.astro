---
import CardProdus from "@/components/ui/produs/CardProdus.astro"
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Debug } from "astro:components"

import { getCollection } from "astro:content"

const allProds = (await getCollection("lista_produse")).map((elem) => elem.data)
---

<BaseLayout title="scratchpad">
  Total: {allProds.length}
  <section class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
    {allProds.map((prod) => <CardProdus {prod} />)}
  </section>
</BaseLayout>
