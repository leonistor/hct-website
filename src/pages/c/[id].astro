---
import GridProduse from "@/components/ui/produs/GridProduse.astro"
import BaseLayout from "@/layouts/BaseLayout.astro"
import { Debug } from "astro:components"

import { getEntry } from "astro:content"

const { id } = Astro.params
if (id === undefined) {
  return Astro.redirect("/404")
}
const categorie = await getEntry("categorii", id)
if (categorie === undefined) {
  return Astro.redirect("/404")
}

const { nume, descriere, icon } = categorie.data
---

<BaseLayout title={categorie.data.nume}>
  <div class="prose dark:prose-invert prose-lg my-6 sm:px-2">
    <h1>{nume}</h1>
  </div>
  <div class="sm:px-2">
    <GridProduse categorii={[categorie.data.id]} />
  </div>
</BaseLayout>
