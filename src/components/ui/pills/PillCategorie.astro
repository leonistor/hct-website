---
import { getEntry } from "astro:content"

interface Props {
  slug: string
}

const { slug } = Astro.props

const categorie = await getEntry("categorii", slug)
if (categorie === undefined) {
  return Astro.redirect("/404")
}
const { nume, descriere, icon } = categorie.data
---

<a
  class="bg-success text-success-foreground rounded-full px-3 py-1 text-sm whitespace-nowrap"
  href={`/c/${slug}`}
  title={descriere}>{nume}</a
>
