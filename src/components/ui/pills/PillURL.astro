---
import { getEntry } from "astro:content"
import IconLink from "phosphor-astro/LinkSimpleHorizontal.astro"

interface Props {
  url: string
}

const { url } = Astro.props
const truncated_url = url.slice(8, 60) + "..."
---

<span
  class="bg-ghost text-ghost-foreground inline-flex items-center justify-center gap-1 rounded-full px-3 py-1"
>
  <IconLink class="bg-ghost text-ghost-foreground size-6" /><a
    class="text-sm whitespace-nowrap"
    href={`${url}`}
    target="_blank"><span class="opacity-50">{truncated_url}</span></a
  >
</span>
