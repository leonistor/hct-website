---
import { getEntry } from "astro:content"

interface Props {
  id: string
}

const { id } = Astro.props

const material = await getEntry("materiale", id)
if (material === undefined) {
  return Astro.redirect("/404")
}
const { denumire, icon, slug } = material.data
---

<a
  class="bg-info text-info-foreground rounded-full px-3 py-1 text-sm whitespace-nowrap hover:opacity-75"
  href={`/m/${slug}`}
>
  {denumire}</a
>
