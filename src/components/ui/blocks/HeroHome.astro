---
import Button from "@/components/starwind/button"
import { conf } from "@/config/site"
import IconArrowRight from "phosphor-astro/ArrowRight.astro"
---

<!-- https://www.shadcnui-blocks.com/blocks/categories/hero -->
<div class="flex min-h-screen items-center justify-center">
  <div class="mx-auto grid w-full max-w-(--breakpoint-xl) gap-12 px-6 py-12 lg:grid-cols-2">
    <div>
      <h1
        class="mt-6 max-w-[17ch] text-4xl leading-[1.2]! font-semibold tracking-tight md:text-5xl lg:text-[2.75rem] xl:text-[3.25rem]"
      >
        {conf.title}
      </h1>
      <p class="text-foreground/80 mt-6 max-w-[60ch] sm:text-lg">
        {conf.description}
      </p>
      <div class="mt-12 flex items-center gap-4">
        <Button size="lg" class="rounded-full text-base">
          Produse <IconArrowRight class="h-5! w-5!" />
        </Button>
      </div>
    </div>
    <div class="bg-accent aspect-video w-full rounded-xl"></div>
  </div>
</div>
