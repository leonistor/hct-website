---
import { pb } from "@/content.config"
import type { Varianta } from "@/lib/pbtypes"
import { For } from "@forastro/flow"

interface Props {
  variante: Varianta[]
}
const { variante } = Astro.props
---

<h3 class="pt-2 text-2xl font-medium text-slate-500">Variante</h3>
<For of={variante}>
  {
    (varianta) => (
      <dl class="divide-accent grid grid-cols-1 gap-1 divide-y py-3 sm:grid-cols-3 sm:gap-4">
        <dt class="font-semibold">{varianta.nume}</dt>
        <dd class="font-light sm:col-span-2">{varianta.descriere}</dd>
      </dl>
    )
  }
</For>
