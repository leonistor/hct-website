---
import "@/styles/starwind.css"

import { ClientRouter } from "astro:transitions"
import LayoutGrid from "astro-layoutgrid"
import { ThemeScript } from "astro-theme-toggle"

import Navigation from "@/components/Navigation.astro"
import Footer from "@/components/Footer.astro"

import { conf } from "@/config/site"

interface Props {
  title?: string
}

const { title = conf.title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="description" content={conf.description} />

    <ClientRouter />
    <ThemeScript />
  </head>

  <body>
    <div class="container mx-auto flex min-h-dvh flex-col">
      <Navigation />
      <main class="grow px-3 sm:px-0"><slot /></main>
      <Footer />
    </div>
    <LayoutGrid gridColor="#fca5a5" />
  </body>
</html>
