---
// import "@fontsource-variable/work-sans"
import workSansWoff2Latin from "@fontsource-variable/work-sans/files/work-sans-latin-wght-normal.woff2?url"
import workSansWoff2LatinExt from "@fontsource-variable/work-sans/files/work-sans-latin-ext-wght-normal.woff2?url"

import "@/styles/starwind.css"

import { ClientRouter } from "astro:transitions"
import LayoutGrid from "astro-layoutgrid"
import { ThemeScript } from "astro-theme-toggle"

import Navigation from "@/components/Navigation.astro"
import Footer from "@/components/Footer.astro"

import { conf } from "@/config/site"

interface Props {
  title?: string
}

const { title = conf.title } = Astro.props
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="font" type="font/woff2" href={workSansWoff2Latin} crossorigin="anonymous" />
    <link rel="preload" as="font" type="font/woff2" href={workSansWoff2LatinExt} crossorigin="anonymous" />

    <title>{title}</title>
    <meta name="description" content={conf.description} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <ClientRouter />
    <!-- <ThemeScript /> -->
  </head>

  <body>
    <!-- <div class="container mx-auto flex min-h-dvh flex-col bg-gray-50"> -->
    <div class="flex min-h-dvh flex-col bg-gray-50">
      <Navigation />
      <main class="container mx-auto grow px-3 pb-4 sm:px-0"><slot /></main>
      <Footer />
    </div>
    <!-- <LayoutGrid gridColor="#fca5a5" /> -->
  </body>
</html>
