    "es-toolkit": "^1.41.0",
    "glightbox": "^3.3.1",
    "phosphor-astro": "^2.1.0",
    "photoswipe": "^5.4.4",
    "pocketbase": "^0.26.3",
    "tailwind-merge": "^3",
    "tailwind-variants": "^3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1",
    "zod": "^4.1.12"
