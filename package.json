    "@astrojs/ts-plugin": "^1.10.5",
    "@playwright/test": "^1.56.1",
    "@types/bun": "^1.3.2",
    "@typescript-eslint/parser": "^8.46.3",
    "astro-themes": "^0.2.7",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
