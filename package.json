{
  "name": "hct-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "sleep 1 && bunx --bun astro dev --host",
    "build": "bunx --bun astro build",
    "preview": "bun run ./dist/server/entry.mjs",
    "astro": "bunx --bun astro",
    "pocket": "cd pocket && pocketbase serve",
    "types": "echo 'visit 'https://transform.tools/json-to-typescript'",
    "seed": "bun import_data/seed.ts",
    "clean": "bun import_data/clean.ts",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "updates:check": "ncu",
    "updates:upgrade": "ncu --interactive"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.10",
