{
  "name": "hct-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "sleep 1 && bunx --bun astro dev --host",
    "build": "bunx --bun astro build",
    "preview": "bun run ./dist/server/entry.mjs",
    "astro": "bunx --bun astro",
    "pocket": "cd pocket && pocketbase serve",
    "types": "echo 'visit 'https://transform.tools/json-to-typescript'",
    "seed": "bun import_data/seed.ts",
    "clean": "bun import_data/clean.ts",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "screenshots": "rm src/assets/screenshots/*.png; playwright test tests/screenshots.spec.ts",
    "release": "changie",
    "updates:check": "ncu",
    "updates:upgrade": "ncu --interactive"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.12",
    "@fadlee/pocketbase-bin": "^1.0.1",
    "@fontsource-variable/inter-tight": "^5.2.7",
    "@fontsource-variable/work-sans": "^5.2.8",
    "@forastro/flow": "^2.5.4",
    "@hedystia/astro-bun": "^0.3.2",
    "@tabler/icons": "^3",
    "@tailwindcss/forms": "^0.5",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4",
    "@tigawanna/typed-pocketbase": "^0.1.6",
    "@types/alpinejs": "^3.13.11",
    "@yeskunall/astro-umami": "^0.0.7",
    "alpinejs": "^3.15.2",
    "astro": "^5.16.4",
    "astro-layoutgrid": "^1.2.0",
    "astro-lightgallery": "^2.0.1",
    "astro-loader-pocketbase": "^2.10.0",
    "astro-remote": "^0.3.4",
    "astro-theme-toggle": "^0.8.0",
    "circle-flags": "https://github.com/HatScripts/circle-flags",
    "embla-carousel": "^8.6.0",
    "embla-carousel-autoplay": "^8.6.0",
    "es-toolkit": "^1.42.0",
    "glightbox": "^3.3.1",
    "phosphor-astro": "^2.1.0",
    "photoswipe": "^5.4.4",
    "pocketbase": "^0.26.4",
    "tailwind-merge": "^3",
    "tailwind-variants": "^3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.6",
    "@playwright/test": "^1.57.0",
    "@types/bun": "^1.3.3",
    "@typescript-eslint/parser": "^8.48.1",
    "astro-themes": "^0.2.7",
    "changie": "^1.24.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "npm-check-updates": "^19.1.2",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
