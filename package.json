    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "eslint": "^9.37.0",
    "eslint-plugin-astro": "^1.3.1",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
